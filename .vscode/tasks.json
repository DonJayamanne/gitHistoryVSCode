// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
// A task runner that calls a custom npm script that compiles the extension.
{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "gulp",
            "task": "hygiene",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "npm",
            "script": "lint-staged",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "webpack-dev",
            "type": "npm",
            "isBackground": true,
            "script": "webpack-dev",
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ]
        }
    ]
}